
; ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
;                              write_mem8.asm
; ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++
;                                                       sunli.wang 2017
; ++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++++

[SECTION .text]
global write_mem8

; ========================================================================
;                  void write_mem8(int addr,int data);
; ========================================================================
write_mem8:
    xor ecx,ecx
    mov ecx,[esp+4]
    xor eax,eax
    mov eax,[esp+8]
    mov [ecx],eax
    ret
