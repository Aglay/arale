# Include folder for ASM files
ASINC = -i inc/ -g

# Default rule
default:
	$(AS) $(ASFLAGS) -f bin $(ASINC) -o ../out/STAGE1.SYS		stage1.asm
	$(AS) $(ASFLAGS) -f bin $(ASINC) -o ../out/STAGE2.SYS		stage2.asm
